t = int(input())
for i in range(t):
    k = int(input())
    n = int(input())
    
    # 0층 초기화
    n_list = [i for i in range(1,n+1)]

    # 층이 올라갈 때마다 k층 n-1호 + k-1층 n호를 더해서 리스트로 만듦
    for i in range(1,k+1):
        k_list = [1]
        for j in range(2,n+1):
            k_list.append(k_list[j-2]+n_list[j-1])
        n_list = k_list
    
    # 리스트 마지막 값이 답
    print(n_list[-1])
